@model PizzaAppCore.ViewModels.OrderFormViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/mainPage.css" rel="stylesheet" />


    <div class="row">
        <div class="col-lg-12">
            <div class="content">
                <h1>Make Your Own Pizza!</h1>
                <h3>Simply App for Ordering and Delivering Pizza</h3>
                <hr />
            </div>
        </div>
    </div>


    <form asp-action="Save">
        <div class="row">

            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="PizzaModel.PizaNameEnum" class="control-label"></label>
                    <select asp-for="PizzaModel.PizaNameEnum" asp-items="Model.PizzaNamesEnum" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PizzaModel.CrustEnum" class="control-label"></label>
                    <select asp-for="PizzaModel.CrustEnum" asp-items="Model.PizzaCrustEnum" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PizzaModel.SizeEnum" class="control-label"></label>
                    <select asp-for="PizzaModel.SizeEnum" asp-items="Model.PizzaSizeEnum" class="form-control"></select>
                </div>

            </div>

            <div id="ingredients">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ExtraIngredients.Chcees" /> @Html.DisplayNameFor(model => model.ExtraIngredients.Chcees)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ExtraIngredients.Pepperoni" /> @Html.DisplayNameFor(model => model.ExtraIngredients.Pepperoni)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ExtraIngredients.Onions" /> @Html.DisplayNameFor(model => model.ExtraIngredients.Onions)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ExtraIngredients.Bacon" /> @Html.DisplayNameFor(model => model.ExtraIngredients.Bacon)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ExtraIngredients.Sausage" /> @Html.DisplayNameFor(model => model.ExtraIngredients.Sausage)
                            </label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <hr />

        <div class="row">

            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="CustomerModel.Name" class="control-label"></label>
                    <input asp-for="CustomerModel.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CustomerModel.Address" class="control-label"></label>
                    <input asp-for="CustomerModel.Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CustomerModel.Phone" class="control-label"></label>
                    <input asp-for="CustomerModel.Phone" class="form-control" />
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="OrderModel.PaymentEnum" class="control-label"></label>
                    <select asp-for="OrderModel.PaymentEnum" asp-items="Model.PaymentEnumm" class="form-control"></select>
                </div>

                <div class="form-group">
                    <label asp-for="OrderModel.Note" class="control-label"></label>
                    <textarea asp-for="OrderModel.Note" class="form-control" rows="5"></textarea>
                </div>
            </div>
        </div>
        @Html.HiddenFor(c => c.CustomerModel.ID)
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
